
<div class="containter">

  <%  if(flash && flash.err) {%>
  <ul class="alert alert-success">
  <% Object.keys(flash.err).forEach(function(error) { %>
  <li><%- JSON.stringify(flash.err[error]) %></li>
  <% }) %>
</ul>
<% } %>


<br /><br />
<form  action="/produit/create" method="POST" class="form-horizontal">
    <div class="form-group">
    <label for="" class="col-lg-2 control-label">Nom</label>
    <div class="col-sm-3">
      <input type="text" class="form-control" name="name" placeholder="Nom">
    </div>
  </div>

    <div class="form-group">

      <label for="" class="col-lg-2 control-label">Description</label>
    <div class="col-sm-3">
      <textarea type="text" class="form-control" name="description" placeholder="Description"></textarea>
    </div>
  </div>
    <div class="form-group">

      <label for="" class="col-lg-2 control-label">Prix</label>
    <div class="col-sm-3">
      <input type="text" class="form-control" name="prix" placeholder="Prix">
    </div>
  </div>
    <div class="form-group">

      <label for="" class="col-lg-2 control-label">Adresse</label>
    <div class="col-sm-3">
      <input type="text" class="form-control" name="adresse" placeholder="Adresse">
    </div>
  </div>
   <div class="form-group">

      <label for="" class="col-lg-2 control-label">Pseudo </label>
    <div class="col-sm-3">
      <input type="text" class="form-control" name="user" value="<%= session.User.name %>">
    </div>
  </div>
   <div class="form-group">

      <label for="" class="col-lg-2 control-label" >Catégorie </label>
    <div class="col-sm-3">
        <select class="form-control" ng-model="categorie"  name="categorie">
        <option value="electronique">Electronique</option>
        <option value="electromenager">Electromenager</option>
        <option value="Meuble">Meuble</option>
        <option value="Literie">Literie</option>
        <option value="Jardin">Jardin</option>
        <option value="telephonie">Téléphonie</option>
        <option value="Sports">Sports</option>
        <option value="cuisine">Cuisine</option>
      </select>
    </div>
  </div><br />

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-primary" value="Proposer un produit">
      <input type="hidden" name="_csrf" value="<% _csrf %>" />
    </div>
  </div>
</form>
 
</div>